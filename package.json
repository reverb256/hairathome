{
  "name": "hairathome",
  "version": "1.0.0",
  "description": "Hair at Home - Static Website with Testing",
  "main": "index.html",
  "scripts": {
    "build": "npm run clean && npm run copy",
    "clean": "rm -rf dist",
    "copy": "mkdir -p dist && cp -r *.html *.css *.js assets images dist/ 2>/dev/null || true",
    "dev": "python3 -m http.server 8000 --directory .",
    "serve": "python3 -m http.server 8000 --directory dist",
    "deploy": "npm run build && git add dist/ && git commit -m 'Deploy to GitHub Pages' && git subtree push --prefix dist origin gh-pages",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:mcp": "node tests/mcp-runner.js",
    "test:ci": "npm run serve & playwright test --reporter=html && kill %1",
    "lint": "eslint tests/",
    "typecheck": "echo \"No type checking specified\" && exit 0"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@eslint/js": "^9.12.0",
    "eslint": "^9.12.0",
    "globals": "^15.11.0",
    "http-server": "^14.1.1"
  },
  "keywords": [
    "hair-salon",
    "mobile-stylist",
    "winnipeg",
    "static-site",
    "github-pages",
    "playwright",
    "testing"
  ],
  "author": "Hair At Home",
  "license": "MIT",
  "homepage": "https://[USERNAME].github.io/[REPO_NAME]",
  "repository": {
    "type": "git",
    "url": "https://github.com/[USERNAME]/[REPO_NAME].git"
  }
}