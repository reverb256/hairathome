{
  "name": "hairathome-hugo",
  "version": "1.0.0",
  "description": "Hair@Home - Hugo Static Site for Winnipeg Mobile Hair Stylist",
  "scripts": {
    "build": "hugo --minify",
    "build:dev": "hugo -D --minify",
    "serve": "hugo server -D --bind 0.0.0.0 --port 1313",
    "serve:production": "hugo server --bind 0.0.0.0 --port 1313",
    "clean": "rm -rf public resources",
    "deploy": "hugo --minify && rsync -avz --delete public/ user@server:/path/to/site/",
    "test": "npm run build && npm run test:lighthouse",
    "test:lighthouse": "lhci autorun",
    "test:performance": "npm run build && npx serve public -l 5000 & sleep 5 && lighthouse http://localhost:5000 --output=json --output-path=./lighthouse-results.json --chrome-flags='--headless' && kill %1",
    "optimize": "npm run build && npm run optimize:images",
    "optimize:images": "find public -name '*.jpg' -o -name '*.png' -o -name '*.webp' | xargs -I {} npx imagemin-cli {} --out-dir=public --plugin=mozjpeg --plugin=pngquant --plugin=webp",
    "lint": "hugo mod npm pack",
    "typecheck": "echo \"Hugo has built-in type checking\" && exit 0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.57.0",
    "axe-core": "^4.11.0",
    "hugo-extended": "latest",
    "pa11y-ci": "^4.0.1",
    "serve": "^14.2.1"
  },
  "keywords": [
    "hugo",
    "static-site",
    "mobile-hair-stylist",
    "winnipeg",
    "hair-salon",
    "mobile-first",
    "performance"
  ],
  "author": "Hair@Home",
  "license": "MIT",
  "homepage": "https://hairathome.ca",
  "repository": {
    "type": "git",
    "url": "https://github.com/hairathome/hairathome.ca"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "dependencies": {
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-webp": "^8.0.0"
  }
}
