{
  "modes": {
    "spec-pseudocode": {
      "name": "Specification & Pseudocode",
      "description": "Requirements analysis and algorithm design phase",
      "agents": ["specification", "pseudocode", "researcher"],
      "hooks": {
        "pre": ["npx claude-flow@alpha hooks pre-task --description 'Specification and pseudocode development'"],
        "post": ["npx claude-flow@alpha hooks post-task --task-id 'spec-pseudocode'"]
      }
    },
    "architect": {
      "name": "Architecture Design",
      "description": "System design and architecture planning",
      "agents": ["architecture", "system-architect", "code-analyzer"],
      "hooks": {
        "pre": ["npx claude-flow@alpha hooks pre-task --description 'Architecture design and planning'"],
        "post": ["npx claude-flow@alpha hooks post-task --task-id 'architect'"]
      }
    },
    "refinement": {
      "name": "TDD Refinement",
      "description": "Test-driven development implementation",
      "agents": ["refinement", "sparc-coder", "tester"],
      "hooks": {
        "pre": ["npx claude-flow@alpha hooks pre-task --description 'TDD implementation and refinement'"],
        "post": ["npx claude-flow@alpha hooks post-task --task-id 'refinement'"]
      }
    },
    "integration": {
      "name": "Integration & Completion",
      "description": "System integration and final completion",
      "agents": ["integration", "reviewer", "cicd-engineer"],
      "hooks": {
        "pre": ["npx claude-flow@alpha hooks pre-task --description 'Integration and completion'"],
        "post": ["npx claude-flow@alpha hooks post-task --task-id 'integration'"]
      }
    },
    "web-development": {
      "name": "Web Development",
      "description": "Full-stack web development with modern frameworks",
      "agents": ["coder", "backend-dev", "mobile-dev", "frontend-dev", "tester"],
      "hooks": {
        "pre": ["npx claude-flow@alpha hooks pre-task --description 'Web development implementation'"],
        "post": ["npx claude-flow@alpha hooks post-task --task-id 'web-development'"]
      }
    }
  },
  "batchtools": {
    "parallel_execution": true,
    "max_concurrent_agents": 8,
    "optimization_level": "high"
  },
  "coordination": {
    "default_topology": "mesh",
    "memory_integration": true,
    "hooks_automation": true
  }
}